<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smartpark.estacionamiento.controller.MainDashboardController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-padding: 10;">

    <top>
        <VBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Sistema de Gestión de Estacionamiento">
                <font><Font name="System Bold" size="24.0" /></font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 15;">
            <Label text="Registrar Nueva Entrada">
                <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Placa:" />
                <TextField fx:id="placaTextField" promptText="ABC-123" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Tipo Vehículo:" />
                <ComboBox fx:id="tipoVehiculoComboBox" promptText="Seleccionar tipo" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Espacio (Slot):" />
                <ComboBox fx:id="slotComboBox" promptText="Seleccionar espacio" />
            </HBox>
            <Button text="Registrar Entrada" onAction="#handleRegistrarEntrada" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label fx:id="statusLabel" text="Cargando..." />
        </HBox>
    </bottom>
</BorderPane>